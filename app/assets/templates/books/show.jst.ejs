<div class="book-show-top">
  <div class="book-show-left">
    <img src="<%= book.escape('img_url_med') %>"><br>
    <div class="book-add-to-shelf-btn">
    </div>
    <div class="book-star-rating">
    </div>
  </div>
  <div class="book-show-right">
    <h2><%= book.escape('title') %></h2>
    <strong>Author</strong>: <%= book.escape('author') %><br>
    <strong>ISBN</strong>: <%= book.escape('isbn') %>
    <h4>Description</h4>
    <%= book.get('description') %>
  </div>
</div>
<% if (review) { %>
<div class="user-review">
<h3>My Review</h3>
</div>
<% } %>
<div class="book-reviews">
</div>